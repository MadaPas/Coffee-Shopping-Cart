<%- include("./_layouts/header") %>

<!-- displaying products-->
<div class="row products ">
  <% products.forEach((product) => { %>
  <div class="col-xs-12 col-md-4 block">
    <a class="productblock" href="/products/<%= product.category %>/<%= product.slug %>">
      <img class="pimage" src="/productImages/<%= product.id %>/<%= product.image %>" alt=""/>
    </a>
    <h3><%= product.title %></h3>
    <h5>Dkk. <%= parseFloat(product.price).toFixed(2) %></h5>
    <a href="/products/<%= product.category %>/<%= product.slug %>"><button type="button" class="btn btn-dark">Details</button></a>
  </div>
  <% }) %>
</div>

<%- include("./_layouts/footer") %>
